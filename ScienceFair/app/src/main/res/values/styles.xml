<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Added for Toolbar. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColorPrimary">@color/colorText</item>

        <!-- Added for Convenience. -->
        <item name="android:theme">@style/ThemeOverlay.AppCompat.ActionBar</item>

        <!-- Added for Transitions. -->
        <item name="android:windowActivityTransitions">true</item>

    </style>

    <style name="ControlColorTheme">
        <item name="colorControlHighlight">@color/colorAmber</item>
    </style>

    <style name="AppThemeMod" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Added for Toolbar. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColorPrimary">@color/colorTextSecondary</item>

        <!-- Added for Convenience. -->
        <item name="android:theme">@style/ThemeOverlay.AppCompat.ActionBar</item>
    </style>

    <style name="AppTheme.MainActivity">
        <item name="android:windowExitTransition">
            @transition/basic_transition
        </item>
        <item name="android:windowEnterTransition">
            @transition/basic_transition
        </item>
    </style>

    <style name="AppTheme.ProfileActivity">
        <item name="android:windowExitTransition">
            @transition/basic_transition
        </item>
        <item name="android:windowEnterTransition">
            @transition/basic_transition
        </item>
    </style>

    <style name="AppTheme.OnboardingActivity"></style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FullscreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="SettingsTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorControlHighlight">@color/colorAccentLight</item>
    </style>

</resources>
